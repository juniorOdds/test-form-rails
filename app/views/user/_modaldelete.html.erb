<!-- app/views/user/confirm_delete.html.erb -->
<%= stylesheet_link_tag "modal.css", media: "all"%>

  <div class="modal-overlay">
    <div class="modal-content">
      <h3>Confirm Delete</h3>
      <p>Are you sure you want to delete</p>
      <div class ="btn-group">
        <%= button_to 'Delete', delete_user_path(@user), method: :delete, class: 'btn btn-danger', data: { turbo_frame: 'card-content' } %>
        <%= button_to 'Cancel', dashboard_path, method: :get, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
